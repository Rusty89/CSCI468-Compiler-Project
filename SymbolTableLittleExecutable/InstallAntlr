mkdir antlrInstallation 
cd antlrInstallation 
wget -q https://www.antlr.org/download/antlr-4.8-complete.jar 
export CLASSPATH=".:/antlrInstallation/antlr-4.8-complete.jar:$CLASSPATH" 
alias antlr4='java -Xmx500M -cp "/antlrInstallatino/antlr-4.8-complete.jar:$CLASSPATH" org.antlr.v4.Tool' 
alias grun='java -Xmx500M -cp "/antlrInstallation/antlr-4.8-complete.jar:$CLASSPATH" org.antlr.v4.gui.TestRig' 
cd .. 

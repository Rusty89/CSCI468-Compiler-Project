cp -r src temp                                   #copy's src into a temp folder so we don't make a mess
java org.antlr.v4.Tool -o temp src/LITTLE.g4     #generates all ANTLR files
javac temp/*.java                                #compiles all files in temp folder
cd temp                                          #moves into compiled temp folder
java Driver ../$1                                #runs an input argument from the main level
cd ..                                            #moves back to main level
rm -r temp                                       #removes temporarily generated files
